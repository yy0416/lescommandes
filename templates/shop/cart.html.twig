{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.cart-container {
			min-height: calc(100vh - 300px); /* 减去头部和页脚的高度 */
			padding: 2rem 0;
		}

		.empty-cart {
			text-align: center;
			padding: 3rem 0;
		}

		.empty-cart p {
			margin-bottom: 1.5rem;
			color: #666;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="cart-container">
		<div class="container">
			<h1 class="mb-4">购物车</h1>

			{% if items|length > 0 %}
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>商品</th>
								<th>单价</th>
								<th>数量</th>
								<th>小计</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
							{% for item in items %}
								<tr>
									<td>{{ item.product.name }}</td>
									<td>€{{ item.product.price }}</td>
									<td>
										<form action="{{ path('app_cart_update', {'id': item.product.id}) }}" method="POST" class="d-flex align-items-center">
											<input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="form-control" style="width: 80px;">
											<button type="submit" class="btn btn-sm btn-outline-primary ms-2">
												更新
											</button>
										</form>
									</td>
									<td>€{{ item.subtotal }}</td>
									<td>
										<a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('确定要删除这个商品吗？')">
											删除
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
						<tfoot>
							<tr>
								<td colspan="3" class="text-end">
									<strong>总计：</strong>
								</td>
								<td>
									<strong>€{{ total }}</strong>
								</td>
								<td></td>
							</tr>
						</tfoot>
					</table>
				</div>

				<div class="d-flex justify-content-between mt-4">
					<a href="{{ path('app_shop') }}" class="btn btn-secondary">继续购物</a>
					<a href="{{ path('app_checkout') }}" class="btn btn-primary">去结算</a>
				</div>
			{% else %}
				<div class="empty-cart">
					<p>购物车是空的</p>
					<a href="{{ path('app_shop') }}" class="btn btn-primary">继续购物</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
