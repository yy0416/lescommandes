{% extends 'base.html.twig' %}

{% block title %}
	{{ 'order.list.title'|trans }}
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">{{ 'order.list.title'|trans }}</h1>

		{% if orders|length > 0 %}
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>{{ 'order.list.order_number'|trans }}</th>
							<th>{{ 'order.list.order_date'|trans }}</th>
							<th>{{ 'order.list.total_amount'|trans }}</th>
							<th>{{ 'order.list.pickup_time'|trans }}</th>
							<th>{{ 'order.list.pickup_location'|trans }}</th>
							<th>{{ 'order.list.actions'|trans }}</th>
						</tr>
					</thead>
					<tbody>
						{% for order in orders %}
							<tr>
								<td>#{{ order.id }}</td>
								<td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
								<td>â‚¬{{ order.totalAmount }}</td>
								<td>{{ order.pickupTime|date('Y-m-d H:i') }}</td>
								<td>{{ order.pickupLocation.name }}</td>
								<td>
									<a href="{{ path('app_order_detail', {'id': order.id}) }}" class="btn btn-sm btn-primary">
										{{ 'order.list.view_details'|trans }}
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% else %}
			<div class="text-center py-5">
				<p>{{ 'order.list.no_orders'|trans }}</p>
			</div>
		{% endif %}
	</div>
{% endblock %}
