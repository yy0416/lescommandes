{% extends 'base.html.twig' %}

{% block title %}订单详情
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">订单详情</h1>

		<div class="card mb-4">
			<div class="card-body">
				<h5 class="card-title">订单信息</h5>
				<p>订单号:
					{{ order.id }}</p>
				<p>下单时间:
					{{ order.createdAt|date('Y-m-d H:i:s') }}</p>
				<p>订单状态:
					{{ order.status }}</p>
			</div>
		</div>

		<div class="card mb-4">
			<div class="card-body">
				<h5 class="card-title">商品清单</h5>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>商品</th>
								<th>单价</th>
								<th>数量</th>
								<th>小计</th>
							</tr>
						</thead>
						<tbody>
							{% for item in order.orderItems %}
								<tr>
									<td>{{ item.product.name }}</td>
									<td>¥{{ item.price }}</td>
									<td>{{ item.quantity }}</td>
									<td>¥{{ item.price * item.quantity }}</td>
								</tr>
							{% endfor %}
						</tbody>
						<tfoot>
							<tr>
								<td colspan="3" class="text-right">
									<strong>总计:</strong>
								</td>
								<td>
									<strong>¥{{ order.totalAmount }}</strong>
								</td>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>

		<div class="text-right">
			<a href="{{ path('app_orders') }}" class="btn btn-secondary">返回订单列表</a>
		</div>
	</div>
{% endblock %}
