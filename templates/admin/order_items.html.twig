<table class="table">
	<thead>
		<tr>
			<th>商品名称</th>
			<th>单价</th>
			<th>数量</th>
			<th>小计</th>
		</tr>
	</thead>
	<tbody>
		{% for item in field.value %}
			<tr>
				<td>{{ item.product.name }}</td>
				<td>¥{{ item.price }}</td>
				<td>{{ item.quantity }}</td>
				<td>¥{{ item.price * item.quantity }}</td>
			</tr>
		{% endfor %}
		<tr>
			<th colspan="3" class="text-right">总计：</th>
			<td>¥{{ field.value|reduce((total, item) => total + item.price * item.quantity, 0) }}</td>
		</tr>
	</tbody>
</table>
