<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<meta charset="UTF-8">
		<meta name="csrf-token" content="{{ csrf_token('authenticate') }}">
		<title>
			{% block title %}
				{{ 'site.title'|trans }}
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# 添加 Google Fonts #}
		<link
		href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;500;700&display=swap" rel="stylesheet">
		{# Bootstrap CSS #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		{# 自定义样式 #}
		<link href="{{ asset('css/style.css') }}" rel="stylesheet">

		{% block stylesheets %}
			<style>
				body {
					min-height: 100vh;
					display: flex;
					flex-direction: column;
				}

				main {
					flex: 1 0 auto;
				}

				footer {
					flex-shrink: 0;
					background-color: #f8f9fa;
					padding: 1.5rem 0;
					margin-top: 2rem;
				}

				.nav-link.btn-link {
					border: none;
					padding: 0.5rem 1rem;
					text-decoration: none;
					color: inherit;
				}

				.nav-link.btn-link:hover {
					color: var(--bs-primary);
				}
			</style>
		{% endblock %}

		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light">
			<div class="container">
				<a class="navbar-brand" href="{{ path('app_shop') }}">{{ 'site.name'|trans }}</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_shop') }}">{{ 'nav.products'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_cart') }}">{{ 'nav.cart'|trans }}</a>
						</li>
						<li class="nav-item dropdown">
							<button class="nav-link dropdown-toggle btn btn-link" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
								{{ {
									'zh': '中文',
									'en': 'English',
									'fr': 'Français'
								}[app.request.locale] }}
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								{% for locale, label in {
									'zh': '中文',
									'en': 'English',
									'fr': 'Français'
								} %}
									<li>
										<form action="{{ path('change_locale', {'locale': locale}) }}" method="POST" style="display: inline;">
											<button type="submit" class="dropdown-item{% if app.request.locale == locale %} active{% endif %}">
												{{ label }}
											</button>
										</form>
									</li>
								{% endfor %}
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<main class="py-4">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="container">
						<div class="alert alert-{{ label }} alert-dismissible fade show">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						</div>
					</div>
				{% endfor %}
			{% endfor %}

			{% for message in app.flashes('error') %}
				<div class="alert alert-danger">{{ message }}</div>
			{% endfor %}

			{% block body %}{% endblock %}
		</main>

		<footer class="bg-white py-4 mt-5">
			<div class="container text-center">
				<p class="mb-0">&copy;
					{{ "now"|date("Y") }}
					商品订购系统. All rights reserved.</p>
			</div>
		</footer>

		{# Bootstrap JS #}
		<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
