{% extends 'emails/base.html.twig' %}

{% block body %}
	<h1>订单确认</h1>
	<p>尊敬的
		{{ order.customerName }}，</p>
	<p>感谢您的订购。以下是您的订单详情：</p>

	<h2>订单信息</h2>
	<ul>
		<li>订单号：{{ order.id }}</li>
		<li>自提时间：{{ order.pickupTime|date('Y-m-d H:i') }}</li>
		<li>自提地点：{{ order.pickupLocation.name }}</li>
	</ul>

	<h2>订购商品</h2>
	<table>
		<tr>
			<th>商品</th>
			<th>数量</th>
			<th>单价</th>
			<th>小计</th>
		</tr>
		{% for item in order.items %}
			<tr>
				<td>{{ item.product.name }}</td>
				<td>{{ item.quantity }}</td>
				<td>{{ item.price }}</td>
				<td>{{ item.price * item.quantity }}</td>
			</tr>
		{% endfor %}
	</table>

	<p>总计：{{ order.totalAmount }}</p>
{% endblock %}
